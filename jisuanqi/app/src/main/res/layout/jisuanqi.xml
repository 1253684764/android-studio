<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ece7e7"
    android:columnCount="4"
    android:rowCount="5"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/tv_result"
        android:layout_rowWeight="3"
        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:layout_marginBottom="-11dp"
        android:gravity="end|bottom"
        android:hint="0"
        android:textColorHint="#000000"
        android:inputType="number"
        android:textSize="48sp" />

    <Button
        android:id="@+id/btn_c"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="C"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="/"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="*"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_backspace"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="退格"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="2"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="3"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_min"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="-"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num4"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="4"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num5"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num6"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="6"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_pass"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="+"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num7"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="7"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num8"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="8"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num9"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="9"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_rowSpan="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginBottom="-11dp"
        android:gravity="center"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_percent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="%"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_num0"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

    <Button
        android:id="@+id/btn_spot"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:layout_marginBottom="-11dp"
        android:background="#ffffff"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:text="."
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />

</GridLayout>